.contact
	font-size: 16px
	z-index: 10
	color: #fff
	overflow: hidden
	position: relative
	padding: 80px 30px
	background-image: url('/img/contact-bg.jpg')
	background-position: 50% 50%
	background-size: cover
	background-attachment: fixed
	min-height: 100vh
	&__left
	&__right
		width: 50%
		float: left
		padding: 20px 50px
	&__left
		text-align: right
	&__right
		text-align: left
	&_overlay
		&::before
			display: block
			position: absolute
			height: 100%
			width: 100%
			z-index: 1
			top: 0
			left: 0
			content: ''
			background: #000
			opacity: 0.7
	&__hero
		position: relative
		z-index: 2
		text-align: center

	    img
			margin-bottom: 0px
		hr
			margin: 15px auto
			width: 50px
		p
			color: #ccc
			margin: 20px 0px
	ul
		list-style: none
	&__social
		display: block
		width: 100%
		ul li
			display: inline
			a
				width: 30px
				height: 30px
				display: inline-block
				text-align: center
				color: #fff
				border: 2px solid #fff
				margin-left: 10px
				i
					position: relative
					padding-top: 5px
					&:hover
					&:focus
					&:active
						color #bfbfbf
						border-color: #bfbfbf
			&:first-child a
				margin-left: 0px

	h3
		margin-top: 30px
		text-align: center

@media all and (max-height: 620px), all and (max-width: 1024px)
	.contact
		&__right
		&__left
			width: 100%
			margin: o auto
			text-align: center
.contact
	&__form
		max-width: 500px
		margin: 0 auto
		input
		textarea
			resize: none
			display: block
			width: 100%
			color: #fff
			font-size: 18px
			background: transparent
			//height 36px
			padding: 5px
			border: none
			outline: none
			border-bottom: 2px solid #bfbfbf
			margin-bottom: 15px
			&:hover
			&:focus
			&:active
				color: #fff
				border-bottom: 2px solid #fff
		input
		textarea
			&:focus
				&::-webkit-input-placeholder
					color: transparent
				&::-moz-placeholder
					color: transparent
				&:-moz-placeholder
					color: transparent
				&:-ms-input-placeholder
					color: transparent