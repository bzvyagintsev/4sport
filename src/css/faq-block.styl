.faq
	position: relative
	float: right
	margin-left: 250px
	background-color: #fff
	width: calc(100% - 250px)
	padding: 80px 30px
	background-image: url('/img/grunge30.jpg')
	background-repeat: repeat
	background-color: #fff
	min-height: 100vh
	height: 100%
	&__h1
		color: #444
		text-transform: uppercase
		text-align: center
	&__p
		text-align: center
		margin-bottom: 25px
		color: #777
	&__hr
		width: 50px
		border: 0
		height: 1px
		background: #333
		margin: 0px auto 10px auto
	.content__buttons
		display: block
		text-align: center
		margin: 30px auto
	ul
		list-style: none
